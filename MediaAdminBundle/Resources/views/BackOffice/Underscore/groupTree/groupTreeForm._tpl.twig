<div class="col-sm-2">
    <select class="form-control folder-value-holder" data-role-name="<%= role.name %>">
        <% if (folder.parent_id != '-') { %>
        <option value="{{ constant('OpenOrchestra\\Media\\Model\\MediaFolderGroupRoleInterface::ACCESS_INHERIT') }}">
            {{ 'open_orchestra_backoffice.form.group.access_inherit'|trans }}
        </option>
        <% } %>
        <option value="{{ constant('OpenOrchestra\\Media\\Model\\MediaFolderGroupRoleInterface::ACCESS_GRANTED') }}">
            {{ 'open_orchestra_backoffice.form.group.access_granted'|trans }}
        </option>
        <option value="{{ constant('OpenOrchestra\\Media\\Model\\MediaFolderGroupRoleInterface::ACCESS_DENIED') }}">
            {{ 'open_orchestra_backoffice.form.group.access_denied'|trans }}
        </option>
    </select>
</div>
