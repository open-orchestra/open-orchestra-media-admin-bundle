<!-- FORMAT SELECTOR  -->
<div id ="selector-loader-container" class="form-group form-horizontal">
    <label class="control-label col-lg-3" ></label>
    <div id="selector-loader"></div>
</div>
<div class="media_crop_form"></div>

<!-- CROPPED VERSION IN USAGE -->
<div class="form-group form-horizontal">
    <label class="control-label col-lg-3">{{ 'open_orchestra_media_admin.media.current_preview'|trans }}</label>
    <div class="col-lg-9 media_crop_preview" ></div>
    <div id="image-loader" style="display:none;"></div>
</div>
<div class="form-group form-horizontal">
    <label class="control-label col-lg-3" ></label>
    <div class="col-lg-9 media_format_actions" style="display:none;">
        <a href="#" class="btn btn-success" id="crop_action_button"><i class="fa fa-crop"></i> {{ 'open_orchestra_media_admin.form.media.manual_crop'|trans }}</a>
        <a href="#" class="btn btn-success" id="upload_action_button"><i class="fa fa-upload"></i> {{ 'open_orchestra_media_admin.form.media.alternative_file'|trans }}</a>
    </div>
</div>

<!-- CROP TOOL -->
<div class="form-group form-horizontal" id="crop-group" style="display:none">
    <label class="control-label col-lg-3">{{ 'open_orchestra_media_admin.form.media.manual_crop'|trans }}</label>
    <div class="col-lg-9" id="original-image">
        <img src="<%= media.get('displayed_image') %>" class="superbox-current-img"/><br />
        <a href="#" class="btn btn-primary" id="crop_button"> {{ 'open_orchestra_media_admin.form.media.crop'|trans }}</a>
    </div>
</div>

<!-- UPLOAD ALTERNATIVE CROPPED VERSION -->
<div id ="alternative-loader-container" class="form-group form-horizontal" style="display:none;">
    <label class="control-label col-lg-3"></label>
    <div id="alternative-loader" ></div>
</div>
<div class="media-override-format-form" style="display:none"></div>

