{
  "name": "open-orchestra/open-orchestra-media-admin-bundle",
  "description": "This bundle integrate the media administration in the Back Office of Open Orchestra",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "OpenOrchestra community",
      "homepage": "https://github.com/open-orchestra/open-orchestra-media-admin-bundle/graphs/contributors"
    }
  ],

  "require": {
    "antimattr/mongodb-migrations-bundle": "~1.0.1",
    "ext-imagick": "~3.4.1",
    "flowjs/flow-php-server": "~1.0.0",
    "koala-framework/composer-extra-assets": "~2.0.4",
    "php-ffmpeg/php-ffmpeg": "~0.6.1",
    "open-orchestra/open-orchestra-cms-bundle": "1.2.*@dev",
    "open-orchestra/open-orchestra-media-bundle": "1.2.*@dev",
    "open-orchestra/open-orchestra-media-file-bundle": "1.2.*@dev",

    "friendsofsymfony/user-bundle": "@dev",
    "innocead/captcha-bundle": "@dev",
    "open-orchestra/open-orchestra-base-api-bundle": "@dev",
    "open-orchestra/open-orchestra-base-bundle": "@dev",
    "open-orchestra/open-orchestra-bbcode-bundle": "@dev",
    "open-orchestra/open-orchestra-display-bundle": "@dev",
    "open-orchestra/open-orchestra-libs": "@dev",
    "open-orchestra/open-orchestra-mongo-libs": "@dev",
    "open-orchestra/open-orchestra-user-bundle": "@dev"
  },

  "require-dev": {
    "codeclimate/php-test-reporter": "~0.3.2",
    "phake/phake": "~2.1.0",
    "phpunit/phpunit": "~4.8.0",

    "open-orchestra/open-orchestra-model-bundle": "1.2.*@dev",

    "open-orchestra/open-orchestra-model-interface": "@dev"
  },

  "config": {
    "bin-dir": "bin"
  },

  "autoload": {
    "psr-4": {
      "OpenOrchestra\\MediaAdminModelBundle\\": "MediaAdminModelBundle/",
      "OpenOrchestra\\MediaAdminBundle\\": "MediaAdminBundle/",
      "OpenOrchestra\\MediaAdmin\\": "MediaAdmin/"
    }
  },

  "extra": {
    "branch-alias": {
      "dev-master": "1.2.x-dev"
    },
    "mouf": {
      "nodejs": {
        "version": "~4.4.3"
      }
    },
    "require-npm": {
      "bower": "~1.7",
      "grunt": "~0.4",
      "grunt-cli": "~1.2",
      "grunt-contrib-symlink": "~1.0",
      "grunt-contrib-less": "~1.3.0",
      "grunt-contrib-cssmin": "~1.0",
      "grunt-contrib-coffee": "~1.0",
      "grunt-contrib-uglify": "~1.0",
      "grunt-contrib-concat": "~1.0",
      "grunt-contrib-watch": "~1.0",
      "grunt-contrib-clean": "~1.0",
      "grunt-commands": "~0.1",
      "coffee-script": "~1.10.0",
      "load-grunt-tasks": "~3.5.0",
      "glob": "~7.0.3",
      "merge": "~1.2.0"
    },
    "expose-npm-packages": true,
    "require-bower": {
      "jquery": "~2.1.1",
      "jquery-ui": "~1.11.2",
      "backbone": "~1.2.3",
      "backbone.wreqr": "~1.3.5",
      "Jcrop": "~0.9.12",
      "flow.js": "~2.9.0"
    }
  }
}
